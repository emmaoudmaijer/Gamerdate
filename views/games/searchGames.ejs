<% include ../partials/head.ejs %>
<title>Games</title>
</head>
<body>
	<header>
		<% include ../partials/header.ejs %>
		<h1>Search<span>Games</span></h1>
	</header>
	<main>
	
            
			<section>
			<section id="search" class="user-input">
            
				<form class="" action="/games/search/query" method="get">
					<input type="text" name="q" value="">
					<button type="submit">Search</button>
				</form>
			</section>
				<% for (var index = 0; index <data.length; index++) { %>
				<article class="card-game">
					<h3><%= data[index].title %></h3>
					<img src=<%= data[index].img %>>
					<form class="" action="/games %>" method="post">
						<input type=hidden name=_id value=<%= data[index]._id %> >
						<input type=hidden name=_title value=<%= data[index].title %> >
						<input type=hidden name=img value=<%= data[index].img %> >
						<button class="icon-plus" type="submit" class="addIcon">Add Game</button>
						
					</form>
				</article>
				<% } %>
			</section>
        </main>
</body>
