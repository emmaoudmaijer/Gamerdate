<% include ../partials/head.ejs %>
<title> Login on Gamerdate </title>
</head>
<body>
	<header>
		<% include ../partials/header.ejs %>
		<h1>Gamerdate<span>Login</span></h1>
	</header>
	<main>
		<section class="user-input">
			<form action=/account/login method=post>
				<fieldset>
				<legend>Log in to account</legend> 
					<label for='username'> Username:</label> 
					<input required type='text' name='username' accept='text'>
					<label for='password' id="password"> Password:</label> 
					<input required type='password' name='password' accept='text'>
					<button id='show-pass' type="button">Show Password</button>
                    
                    <button type="submit" name="signup">Sign In</button>
	            </fieldset>
			</form>
		</section>
	</main>
</body>
