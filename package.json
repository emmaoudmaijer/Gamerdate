{
  "name": "gamerdate",
  "version": "1.0.0",
  "description": "An app to match people based on games",
  "main": "server/server.js",
  "scripts": {
    "eslint": "node_modules/.bin/eslint server.js controllers/*.js public/scripts/*.js",
    "stylelint": "node_modules/.bin/stylelint public/css/*.css",
    "test": "npm run eslint && npm run stylelint",
    "start": "node server.js",
    "nmStart": "nodemon server.js",
    "mongoStart": "mongod -f mongod.conf"
  },
  "keywords": [
    "Dating"
  ],
  "author": "Team 3",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.21.0",
    "array-find": "^1.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "jshint": "^2.10.1",
    "mongodb": "^3.2.2",
    "mongoose": "^5.4.20",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-local-mongoose": "^5.0.1",
    "repeat-string": "^1.6.1",
    "request": "^2.88.0",
    "slug": "^1.0.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "nodemon": "^1.18.10",
    "stylelint": "^9.10.1"
  },
  "nodemonConfig": {
    "start": "npm run test",
    "restart": "npm run test"
  },
  "eslintIgnore": [
    "*.ejs",
    "node_modules/"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "number-leading-zero": "never",
      "no-descending-specificity": null
    }
  }
}
